<body>
  <div class="overlay"></div>
  <div class="container">
    <h2>Real-Time Intrusion Detection</h2>

    <label for="iface">üåê Select Network Interface:</label>
    <select id="iface">
      <option value="4">Wi-Fi 2</option>
      <option value="7">Ethernet 5</option>
      <option value="8">Ethernet 2</option>
      <option value="11">Ethernet</option>
    </select>

    <div>
      <button class="btn" onclick="startDetection()">‚ñ∂Ô∏è Start Detection</button>
      <button class="btn" onclick="stopDetection()">‚èπÔ∏è Stop</button>
    </div>

    <div class="result" id="result">üì° Waiting for scan...</div>
    <div class="log" id="log">Log Results:</div>
  </div>

  <script>
    let intervalId = null;

    function detect() {
      const iface = document.getElementById("iface").value;
      const resultDiv = document.getElementById("result");
      resultDiv.className = "result";
      resultDiv.innerText = "üîç Scanning...";

      fetch(`/detect?iface=${iface}`)
        .then(res => res.json())
        .then(data => {
          const timestamp = new Date().toLocaleString();

          if (data.result.includes("Normal")) {
            resultDiv.className += " normal";
            resultDiv.innerText = "‚úÖ " + data.result;
          } else if (data.result.includes("Intrusion")) {
            resultDiv.className += " anomaly";
            resultDiv.innerText = "üö® " + data.result;
          } else {
            resultDiv.className += " error";
            resultDiv.innerText = "‚ùå " + data.result;
          }

          const logDiv = document.getElementById("log");
          const newLog = document.createElement("div");
          newLog.innerHTML = `<strong>[${timestamp}]</strong> - ${data.result}`;
          logDiv.appendChild(newLog);
          logDiv.scrollTop = logDiv.scrollHeight; // Auto-scroll to bottom
        })
        .catch(err => {
          resultDiv.className += " error";
          resultDiv.innerText = "‚ùå Error: " + err;
        });
    }

    function startDetection() {
      if (!intervalId) {
        detect(); // Trigger immediately
        intervalId = setInterval(detect, 5000); // Then every 5s
      }
    }

    function stopDetection() {
      if (intervalId) {
        clearInterval(intervalId);
        intervalId = null;
        document.getElementById("result").innerText = "üõë Scanning stopped.";
      }
    }
  </script>
